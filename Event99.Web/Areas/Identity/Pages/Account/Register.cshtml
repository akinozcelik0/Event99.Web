@page
@using Event99.Utilty
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

@if (User.IsInRole(StaticDetails.Role_Admin))
{
    <div class="text-center">
        <h1 class="pt-4">Register an User - Admin Portal</h1>
    </div>
}

<div class="col-xl-12 col-md-12 mt-5">
    <div class="card">
        <div class="card-content">
            <div class="card-body">
                <h3 class="card-title text-center text-primary">Register</h3>
                <h4 class="card-subtitle text-center" style="color:darkgoldenrod">Please Register to create and attend events !!</h4>
            </div>
            <div class="card-body">
                <form id="registerForm" class="form" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-body">
                        <div class="form-group">
                            <label asp-for="Input.Email">Email</label>
                            <input asp-for="Input.Email" class="form-control" type="email" autocomplete="username" aria-required="true" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Firstname">First Name</label>
                            <input asp-for="Input.Firstname" class="form-control" aria-required="true" />
                            <span asp-validation-for="Input.Firstname" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Surname">Surname</label>
                            <input asp-for="Input.Surname" class="form-control" aria-required="true" />
                            <span asp-validation-for="Input.Surname" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Input.Birthdate">Birthdate</label>
                            <input asp-for="Input.Birthdate" class="form-control" type="date" aria-required="true" />
                            <span asp-validation-for="Input.Birthdate" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Password">Password</label>
                            <input asp-for="Input.Password" class="form-control " autocomplete="new-password" aria-required="true" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                            <input asp-for="Input.ConfirmPassword" class="form-control " autocomplete="new-password" aria-required="true" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>

                        <fieldset class="form-group">
                            <select class="form-control" id="basicSelect" asp-for="Input.Role" asp-items="@Model.Input.RoleList">
                                <option disabled selected>-Select Role-</option>
                            </select>
                        </fieldset>
                    </div>
                    <div class="form-actions center">
                        <button type="submit" class="btn btn-primary">Register</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

























