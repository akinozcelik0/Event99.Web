@model Event99.Models.ViewModels.Event.EventViewModel

@{
    ViewData["Title"] = "Create";
}



<div class="content-body mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title"> Create an event!</h4>
                    <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
                    <div class="heading-elements">
                        <ul class="list-inline mb-0">
                            <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                            <li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>
                        </ul>
                    </div>
                </div>
                <div class="card-content collapse show">
                    <div class="card-body">
                        <hr />
                        <div class="row">
                            <div class="col-md-4">
                                <form asp-action="Create">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-group">
                                        <label asp-for="@Model.Event.Name" class="control-label"></label>
                                        <input asp-for="@Model.Event.Name" class="form-control" />
                                        <span asp-validation-for="@Model.Event.Name" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="@Model.Event.Description" class="control-label"></label>
                                        <input asp-for="@Model.Event.Description" class="form-control" />
                                        <span asp-validation-for="@Model.Event.Description" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="@Model.Event.EventDate" class="control-label"></label>
                                        <input asp-for="@Model.Event.EventDate" class="form-control" />
                                        <span asp-validation-for="@Model.Event.EventDate" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="@Model.Event.AttendeeQuota" class="control-label"></label>
                                        <input asp-for="@Model.Event.AttendeeQuota" class="form-control" />
                                        <span asp-validation-for="@Model.Event.AttendeeQuota" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="@Model.Event.Status" class="control-label"></label>
                                        <select asp-for="@Model.Event.Status" class="form-select">
                                            <option disabled selected>=-Select Category-=</option>
                                            <option>Pending</option>
                                            <
                                        </select>
                                        <span asp-validation-for="@Model.Event.Status" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="@Model.Location.Adress" class="control-label"></label>
                                        <input asp-for="@Model.Location.Adress" class="form-control" />
                                        <span asp-validation-for="@Model.Location.Adress" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="@Model.Location.CityId" class="control-label"></label>
                                        <select asp-for="@Model.Location.CityId" class="form-control" asp-items="@Model.CityList"></select>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="@Model.Event.CategoryId" class="control-label"></label>
                                        <select asp-for="Event.CategoryId" class="form-control" asp-items="@Model.CategoryList"></select>
                                    </div>
                                    <div class="form-group">
                                        <input type="submit" value="Create" class="btn btn-primary" />
                                    </div>
                                </form>
                            </div>
                        </div>

                        <div>
                            <a asp-action="Index">Back to List</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>






@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
